    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeyondBarriersMart"
        tools:targetApi="31">
        <activity
            android:name=".CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".CartActivity"
            android:exported="false" />
        <activity
            android:name=".SellerProfileActivity"
            android:exported="false" />
        <activity
            android:name=".BuyerProfileActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".AddProductsActivity"
            android:exported="false" />
        <activity
            android:name=".MyProductsActivity"
            android:exported="false" />
        <activity
            android:name=".SpendingChartActivity"
            android:exported="false"
            android:label="@string/title_activity_spending_chart"
            android:theme="@style/Theme.BeyondBarriersMart.NoActionBar" />
        <activity
            android:name=".CategoryActivity"
            android:exported="false"
            android:label="CategoryActivity"
            android:theme="@style/Theme.BeyondBarriersMart.NoActionBar" />
        <activity
            android:name=".ProductActivity"
            android:exported="false"
            android:label="ProductActivity"
            android:theme="@style/Theme.BeyondBarriersMart.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>